<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Üst kısım - Başlık -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_column="1"
            android:layout_gravity="end|center_vertical">

            <TextView
                android:id="@+id/lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/refreshButton"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/refresh_button_background"
                android:src="@drawable/ic_refresh"
                android:padding="2dp"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </GridLayout>

    <!-- Alt kısım - Vakitler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/imsakLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/imsak"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/imsakTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/gunesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gunes"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/gunesTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ogleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ogle"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ogleTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ikindiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ikindi"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/ikindiTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aksamLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aksam"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/aksamTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yatsiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yatsi"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/yatsiTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 