<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Başlık -->
        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/widget_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Vakit Grid Layout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- İmsak -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/imsak"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/imsakTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <!-- Güneş -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/gunes"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/gunesTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <!-- Öğle -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/ogle"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ogleTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <!-- İkindi -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/ikindi"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ikindiTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <!-- Akşam -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/aksam"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/aksamTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <!-- Yatsı -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/yatsi"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/yatsiTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"/>

        </GridLayout>

        <!-- Son Güncelleme -->
        <TextView
            android:id="@+id/lastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/widget_text_color_secondary"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout> 