<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/imsak_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imsak"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/imsak_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/gunes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gunes"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/gunes_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/ogle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ogle"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/ogle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/ikindi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ikindi"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/ikindi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/aksam_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aksam"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/aksam_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/yatsi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yatsi"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"/>
            <TextView
                android:id="@+id/yatsi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Notification"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>