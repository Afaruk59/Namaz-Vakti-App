<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Üst kısım - Başlık -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="start|center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|center_vertical">

            <TextView
                android:id="@+id/lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="10sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="50dp"/>

            <ImageButton
                android:id="@+id/refreshButton"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/refresh_button_background"
                android:src="@drawable/ic_refresh"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:layout_marginEnd="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Alt kısım - 2x3 Vakitler Grid düzen -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="false"
        android:alignmentMode="alignBounds">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/imsakLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/imsak"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/imsakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/gunesLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gunes"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/gunesTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/ogleLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ogle"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/ogleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/ikindiLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ikindi"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/ikindiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/aksamLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aksam"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/aksamTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="1dp"
            android:paddingVertical="2dp">
            <TextView
                android:id="@+id/yatsiLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yatsi"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="5"/>
            <TextView
                android:id="@+id/yatsiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:layout_marginStart="0dp"
                android:ellipsize="none"
                android:maxLines="1"
                android:minWidth="45dp"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout> 